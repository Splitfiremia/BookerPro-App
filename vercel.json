# Vercel Configuration for Website Builder Subdomain Routing
# This file configures Vercel to handle subdomain routing for shop websites

{
  "version": 2,
  "name": "bookerpro-website-builder",
  "builds": [
    {
      "src": "api/render-website/[shopSlug].ts",
      "use": "@vercel/node"
    },
    {
      "src": "templates/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/render-website/([^/]+)",
      "dest": "/api/render-website/$1"
    },
    {
      "src": "/([^/]+)",
      "dest": "/api/render-website/$1",
      "headers": {
        "Cache-Control": "public, max-age=3600, s-maxage=86400"
      }
    }
  ],
  "functions": {
    "api/render-website/[shopSlug].ts": {
      "maxDuration": 10
    }
  },
  "headers": [
    {
      "source": "/api/render-website/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, s-maxage=86400"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/www/:path*",
      "destination": "/:path*",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/([^/]+)",
      "destination": "/api/render-website/$1"
    }
  ]
}